  || echo -e ' '${RED}'[!]'${RESET}" Issue downloading firefox extensions" 1>&2
unzip -oqd ${ffpath} /tmp/extensions.zip

#--- Installing extensions
for FILE in $(find "${ffpath}" -maxdepth 1 -type f -name '*.xpi'); do
  d="$(basename "${FILE}" .xpi)"
  mkdir -p "${ffpath}/${d}/"
  unzip -q -o -d "${ffpath}/${d}/" "${FILE}"
  rm -f "${FILE}"
done
#--- Enable Waterfox's addons/plugins/extensions
timeout 5 waterfox >/dev/null 2>&1
#timeout 5 killall -9 -q -w firefox >/dev/null
timeout 5 pkill waterfox >/dev/null
sleep 3s


#--- Method for Newer versions
#---&& [ -e "${file}" ] && cp -n $file{,.bkup}
