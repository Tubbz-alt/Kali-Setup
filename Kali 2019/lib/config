if [[ -e "${file}" ]] || [[ -n "${file}" ]]; then
  echo -e " ${YELLOW}[i]${RESET} Enabled ${YELLOW}Firefox's extensions${RESET} (via method #2 - extensions.json)"
  #--- Force them all!
  sed -i 's/"active":false,/"active":true,/g' "${file}"
  #--- Force them all!
  sed -i 's/"userDisabled":true,/"userDisabled":false,/g' "${file}"
fi
#--- Remove cache
#---&& [ -e "${file}" ] && cp -n $file{,.bkup}
file=$(find ~/.waterfox/*.default*/ -maxdepth 1 -type f -name 'prefs.js' -print -quit)
[ -n "${file}" ] \
  && sed -i '/extensions.installCache/d' "${file}"
#--- For extensions that just work without restarting
timeout 5 waterfox >/dev/null 2>&1
timeout 5 pkill waterfox >/dev/null
